
@{
    ViewData["Title"] = "Autenticação de acesso";
}

<style type="text/css">
    .btn-template {
        color: white;
        background-color: rgb(219, 187, 129);
        border-color: rgb(219, 187, 129);
    }

    .container-custom-margin {
        margin-top: 100px;
        margin-bottom: 100px;
    }
</style>

<div class="container container-custom-margin">

    @{
        var x = @ViewBag.Alert;

        if (!string.IsNullOrEmpty(x))
        {
            <div class="alert alert-danger" role="alert">
                @x
            </div>
        }
    }

    <partial name="~/Views/Auth/Message/_AlertAccessDanied.cshtml" />

</div>
